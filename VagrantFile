# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "bento/ubuntu-18.04"
  config.vm.box_check_update = false
  config.vm.define "codeday-local" do |foohost|
  end
  config.vm.provider :virtualbox do |vb|
    vb.name = "codeday-local"
  end
  config.vm.network "private_network", ip: "192.168.33.101"
  config.vm.network "forwarded_port", guest: 80, host: 8080, auto_correct: true
  config.vm.network "forwarded_port", guest: 443, host: 8081, auto_correct: true
  config.vm.network "forwarded_port", guest: 22, host: 2200, auto_correct: true
  config.vm.network "forwarded_port", guest: 3306, host: 33060, auto_correct: true
  config.vm.hostname = "codeday-local"
  config.vm.synced_folder "./", "/var/www"
  config.vm.synced_folder "./vagrant/server", "/home/vagrant/server"
  config.vm.provision "shell", path: "./vagrant/server/provision.sh"
end
